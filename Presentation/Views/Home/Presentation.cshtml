@model SinglePresentationViewModel
@{
    ViewData["Title"] = "Presentation";
    var BikePhoto = Url.Content("~/Images/" + Model.presentationModel.Photo);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow-lg">
            <img src="@BikePhoto" class="card-img-top img-fluid" alt="Presentation Image" style="max-height: 500px; object-fit: cover;" />
            <div class="card-body">
                <h1 class="card-title text-center text-primary mb-4">
                    <i class="fas fa-presentation fa-lg text-secondary me-2"></i>
                    @Model.presentationModel.PresentationName
                </h1>
                <p class="card-text fs-5 text-muted text-justify">
                    <i class="fas fa-info-circle me-2 text-primary"></i>
                    @Model.presentationModel.PresentationDetails
                </p>
                <div class="d-flex justify-content-end align-items-center mt-4">
                    <a asp-controller ="Home" asp-action="EditPresentation" asp-route-Id="@Model.presentationModel.Id" class="btn btn-outline-warning me-2">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href="/Presentations/List" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <!-- Additional Footer Section -->
        <footer class="text-center mt-5">
            <p class="text-muted">
                <i class="fas fa-copyright"></i> 2024 YourCompany. All rights reserved.
            </p>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
</body>
</html>
