@model EditViewmodel
@{
    ViewData["Title"] = "EditPresentation";
}





<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center text-primary mb-4"><i class="fas fa-chalkboard-teacher"></i> Edit Presentation</h1>
        <hr />

        <form enctype="multipart/form-data" asp-action="EditPresentation" asp-controller="Home" method="post" class="p-4 border rounded shadow-sm">

            <!-- Hidden Name Field -->
            <input type="text" hidden asp-for="Name" class="form-control mb-3" id="presentationNameInput" />

            <!-- Presentation Name Input -->
            <div class="mb-3">
                <label for="PresentationName" class="form-label">Presentation Name</label>
                <input type="text" asp-for="PresentationName" value="@Model.PresentationName" class="form-control" id="PresentationName" placeholder="Enter the name of the presentation" />
            </div>

            <!-- Text Area for Description -->
            <div class="mb-3">
                <label for="PresentationDescription" class="form-label">Presentation Description</label>
                <textarea asp-for="PresentationDetails" class="form-control" value="@Model.PresentationDetails" id="PresentationDescription" placeholder="Add a description for your presentation" rows="3"></textarea>
            </div>

            <!-- File Upload Input -->
            <div class="mb-3">
                <label for="Photo" value="@Model.Photo" class="form-label">Upload a Photo</label>
                <input type="file" asp-for="Photo" class="form-control" id="Photo">
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save"></i> Save Presentation
                </button>
            </div>
        </form>
    </div>

   
    <!-- Include Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    

</body>
</html>


